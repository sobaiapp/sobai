require File.join(File.dirname(`node --print "require.resolve('react-native/package.json')"`), "scripts/react_native_pods")

require 'json'
podfile_properties = JSON.parse(File.read(File.join(__dir__, 'Podfile.properties.json'))) rescue {}

ENV['RCT_NEW_ARCH_ENABLED'] = podfile_properties['newArchEnabled'] == 'true' ? '1' : '0'
ENV['EX_DEV_CLIENT_NETWORK_INSPECTOR'] = podfile_properties['EX_DEV_CLIENT_NETWORK_INSPECTOR']

platform :ios, '14.0'

install! 'cocoapods',
  :deterministic_uuids => false,
  :generate_multiple_pod_projects => true,
  :incremental_installation => true

# Debug logs for CI
puts "Current directory: #{Dir.pwd}"
puts "Podfile directory: #{__dir__}"
puts "Environment PWD: #{ENV['PWD']}"

# Get the absolute path to the project root
project_root = File.expand_path('..', __dir__)
puts "Project root: #{project_root}"

# Try to find React Native using node
begin
  react_native_path = `node --print "require.resolve('react-native/package.json')"`
  react_native_path = File.dirname(react_native_path.strip)
  puts "Resolved React Native path via Node: #{react_native_path}"
rescue => e
  puts "Error resolving React Native via Node: #{e.message}"
  react_native_path = nil
end

# Fallback paths
fallback_paths = [
  File.join(project_root, 'node_modules', 'react-native'),
  File.join(Dir.pwd, 'node_modules', 'react-native'),
  File.join(ENV['PWD'], 'node_modules', 'react-native')
]

puts "Checking fallback paths:"
fallback_paths.each do |path|
  puts "  - #{path}"
  if File.exist?(File.join(path, 'package.json'))
    react_native_path = path
    puts "Found React Native at: #{path}"
    break
  end
end

unless react_native_path && File.exist?(File.join(react_native_path, 'package.json'))
  raise "Could not find React Native. Tried paths:\n" +
        "- Node resolution: #{react_native_path}\n" +
        "- Fallback paths:\n" +
        fallback_paths.map { |p| "  - #{p}" }.join("\n")
end

# Verify the package.json exists at the resolved path
package_json_path = File.join(react_native_path, 'package.json')
puts "Verifying package.json at: #{package_json_path}"
unless File.exist?(package_json_path)
  raise "React Native package.json not found at: #{package_json_path}"
end

target 'SobAi' do
  # React Native dependencies
  use_react_native!(
    :path => File.expand_path(react_native_path),
    :hermes_enabled => true,
    :fabric_enabled => false,
    :app_path => project_root
  )

  # Post-install configuration
  post_install do |installer|
    react_native_post_install(
      installer,
      File.expand_path(react_native_path),
      :mac_catalyst_enabled => false
    )

    # Set build settings for all targets
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
        config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
        config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
        
        # Enable modular headers for better build performance
        config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        config.build_settings['SWIFT_OPTIMIZATION_LEVEL'] = '-O'
        
        # Enable bitcode for App Store submission
        config.build_settings['ENABLE_BITCODE'] = 'NO'
      end
    end
  end
end
