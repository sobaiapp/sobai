require File.join(File.dirname(`node --print "require.resolve('react-native/package.json')"`), "scripts/react_native_pods")

require 'json'
podfile_properties = JSON.parse(File.read(File.join(__dir__, 'Podfile.properties.json'))) rescue {}

ENV['RCT_NEW_ARCH_ENABLED'] = podfile_properties['newArchEnabled'] == 'true' ? '1' : '0'
ENV['EX_DEV_CLIENT_NETWORK_INSPECTOR'] = podfile_properties['EX_DEV_CLIENT_NETWORK_INSPECTOR']

platform :ios, '14.0'
install! 'cocoapods',
  :deterministic_uuids => false,
  :generate_multiple_pod_projects => true,
  :incremental_installation => true

prepare_react_native_project!

# Get the absolute path to the project root
project_root = File.dirname(File.dirname(__FILE__))

target 'SobAi' do
  # React Native dependencies
  use_react_native!(
    :path => File.join(project_root, 'node_modules', 'react-native'),
    :hermes_enabled => true,
    :fabric_enabled => false,
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # Post-install configuration
  post_install do |installer|
    react_native_post_install(
      installer,
      File.join(project_root, 'node_modules', 'react-native'),
      :mac_catalyst_enabled => false
    )

    # Set build settings for all targets
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
        config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
        config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
        
        # Enable modular headers for better build performance
        config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        config.build_settings['SWIFT_OPTIMIZATION_LEVEL'] = '-O'
        
        # Enable bitcode for App Store submission
        config.build_settings['ENABLE_BITCODE'] = 'NO'
      end
    end
  end
end
