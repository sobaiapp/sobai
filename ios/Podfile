# Resolve react-native path reliably
require File.join(File.dirname(`node --print "require.resolve('react-native/package.json')"`), "scripts/react_native_pods")

require 'json'
podfile_properties = JSON.parse(File.read(File.join(__dir__, 'Podfile.properties.json'))) rescue {}

ENV['RCT_NEW_ARCH_ENABLED'] = podfile_properties['newArchEnabled'] == 'true' ? '1' : '0'
ENV['EX_DEV_CLIENT_NETWORK_INSPECTOR'] = podfile_properties['EX_DEV_CLIENT_NETWORK_INSPECTOR']

platform :ios, '14.0'

install! 'cocoapods',
  :deterministic_uuids => false,
  :generate_multiple_pod_projects => true,
  :incremental_installation => true

# Debug logs for CI
puts "Current directory: #{Dir.pwd}"
puts "Podfile directory: #{__dir__}"
puts "Environment PWD: #{ENV['PWD']}"

def resolve_react_native_path
  # Get the absolute path to the project root (one level up from ios directory)
  project_root = File.expand_path("..", Dir.pwd)
  puts "Project root: #{project_root}"
  
  # Get the direct path to react-native
  react_native_path = File.join(project_root, 'node_modules', 'react-native')
  puts "Direct React Native path: #{react_native_path}"
  
  # Check if package.json exists at the path
  package_json_path = File.join(react_native_path, 'package.json')
  puts "Checking package.json at: #{package_json_path}"
  
  # Check if react_native_pods.rb exists
  pods_rb_path = File.join(react_native_path, 'scripts', 'react_native_pods.rb')
  puts "Checking react_native_pods.rb at: #{pods_rb_path}"
  
  # List contents of node_modules directory
  puts "Contents of node_modules directory:"
  puts `ls -la #{File.join(project_root, 'node_modules')}`
  
  # List contents of react-native directory
  puts "Contents of react-native directory:"
  puts `ls -la #{react_native_path}`
  
  # Return the path if both files exist
  if File.exist?(package_json_path) && File.exist?(pods_rb_path)
    react_native_path
  else
    # Fallback to the default path
    File.join(project_root, 'node_modules', 'react-native')
  end
end

# Get the path to react-native
react_native_path = resolve_react_native_path
puts "Using React Native path: #{react_native_path}"

# Verify React Native installation
package_json_path = File.join(react_native_path, 'package.json')
puts "Checking package.json at: #{package_json_path}"

unless File.exist?(package_json_path)
  raise "React Native package.json not found at: #{package_json_path}"
end

# Verify React Native scripts
react_native_pods_path = File.join(react_native_path, 'scripts', 'react_native_pods.rb')
puts "Checking react_native_pods.rb at: #{react_native_pods_path}"

unless File.exist?(react_native_pods_path)
  raise "React Native pods script not found at: #{react_native_pods_path}"
end

# Additional debug information
puts "Node version: #{`node -v`.strip}"
puts "NPM version: #{`npm -v`.strip}"
puts "Current directory contents:"
puts `ls -la`
puts "Node modules directory contents:"
puts `ls -la ../node_modules` if Dir.exist?('../node_modules')

# Load React Native pods
require File.join(react_native_path, 'scripts', 'react_native_pods')

target 'SobAi' do
  # React Native dependencies
  use_react_native!(
    :path => react_native_path,
    :hermes_enabled => true,
    :fabric_enabled => false,
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # Post-install configuration
  post_install do |installer|
    react_native_post_install(
      installer,
      react_native_path,
      :mac_catalyst_enabled => false
    )

    # Set build settings for all targets
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
        config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
        config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
        
        # Enable modular headers for better build performance
        config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        config.build_settings['SWIFT_OPTIMIZATION_LEVEL'] = '-O'
        
        # Enable bitcode for App Store submission
        config.build_settings['ENABLE_BITCODE'] = 'NO'
      end
    end
  end
end
