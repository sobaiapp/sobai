default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :build do
    # Create a temporary keychain
    create_keychain(
      name: "temp_keychain",
      password: "temp_password",
      default_keychain: true,
      unlock: true,
      timeout: 3600
    )

    # Update code signing settings
    update_code_signing_settings(
      use_automatic_signing: false,
      team_id: "Q834NS68MG",
      code_sign_identity: "iPhone Distribution",
      profile_name: "SB_AI_App_Store",
      build_configuration: "Release"
    )

    # Build the app with manual signing
    build_ios_app(
      scheme: "SobAi",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.sobai.app" => "SB_AI_App_Store"
        },
        signingStyle: "manual",
        teamID: "Q834NS68MG"
      },
      xcargs: {
        PROVISIONING_PROFILE_SPECIFIER: "SB_AI_App_Store",
        CODE_SIGN_IDENTITY: "iPhone Distribution",
        DEVELOPMENT_TEAM: "Q834NS68MG"
      }
    )

    # Clean up the temporary keychain
    delete_keychain(name: "temp_keychain")
  end
end 