default_platform(:ios)

platform :ios do
  desc "Build iOS app for App Store using manual code signing"
  lane :beta do
    keychain_name = "temp_keychain"
    keychain_password = "temp_password"

    # Create temporary keychain
    create_keychain(
      name: keychain_name,
      password: keychain_password,
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      add_to_search_list: true
    )

    # Read provisioning profile UUID
    profile_path = File.expand_path("~/Library/MobileDevice/Provisioning Profiles/SB_AI.mobileprovision")
    profile_uuid = sh("security cms -D -i '#{profile_path}' | /usr/libexec/PlistBuddy -c 'Print :UUID' /dev/stdin").strip

    # Update code signing settings manually
    update_code_signing_settings(
      use_automatic_signing: false,
      team_id: ENV["FASTLANE_TEAM_ID"],
      path: "./SobAi.xcodeproj",
      targets: ["SobAi"],
      build_configurations: ["Release"],
      code_sign_identity: "iPhone Distribution",
      profile_name: "SB_AI",
      profile_uuid: profile_uuid
    )

    # Build with manual code signing
    build_ios_app(
      workspace: "SobAi.xcworkspace",
      scheme: "SobAi",
      export_method: "app-store",
      export_options: {
        provisioningProfiles: {
          "com.sobai.app" => "SB_AI"
        },
        signingStyle: "manual",
        teamID: ENV["FASTLANE_TEAM_ID"]
      },
      xcargs: "PROVISIONING_PROFILE_SPECIFIER=SB_AI CODE_SIGN_IDENTITY='iPhone Distribution' DEVELOPMENT_TEAM=#{ENV['FASTLANE_TEAM_ID']}"
    )

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )

    # Delete the temporary keychain
    delete_keychain(name: keychain_name)
  end
end
