default_platform(:ios)

platform :ios do
  desc "Build iOS app for App Store distribution"
  lane :build do
    # Create a temporary keychain
    create_keychain(
      name: "temp_keychain",
      password: "password",
      default_keychain: true,
      unlock: true,
      timeout: 3600
    )

    # Update code signing settings to use manual signing
    update_code_signing_settings(
      use_automatic_signing: false,
      team_id: "Q834NS68MG",
      profile_name: "SB_AI_App_Store",
      code_sign_identity: "iPhone Distribution"
    )

    # Build the app with manual signing
    build_ios_app(
      scheme: "SobAi",
      export_method: "app-store",
      export_options: {
        method: "app-store",
        provisioningProfiles: {
          "com.sobai.app" => "SB_AI_App_Store"
        }
      },
      output_directory: "./build",
      output_name: "SobAi.ipa"
    )

    # Clean up the keychain
    delete_keychain(name: "temp_keychain")
  end
end 