default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :build do
    # Create a temporary keychain
    create_keychain(
      name: "temp_keychain",
      password: "temp_password",
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      add_to_search_list: true
    )

    # Update code signing settings to use manual signing
    update_code_signing_settings(
      use_automatic_signing: false,
      team_id: "Q834NS68MG",
      path: "SobAi.xcodeproj",
      targets: ["SobAi"],
      build_configurations: ["Debug", "Release"],
      code_sign_identity: "iPhone Distribution",
      profile_name: "SB_AI_App_Store"
    )

    # Build the app with manual signing
    build_ios_app(
      scheme: "SobAi",
      export_method: "app-store",
      export_options: {
        signingStyle: "manual",
        teamID: "Q834NS68MG",
        provisioningProfiles: {
          "com.sobai.app" => "SB_AI_App_Store"
        }
      },
      xcargs: {
        CODE_SIGN_IDENTITY: "iPhone Distribution",
        CODE_SIGN_STYLE: "Manual",
        DEVELOPMENT_TEAM: "Q834NS68MG",
        PROVISIONING_PROFILE_SPECIFIER: "SB_AI_App_Store"
      }
    )

    # Clean up the keychain
    delete_keychain(name: "temp_keychain")
  end
end 